OPENAI_API_KEY="key"
GAME_TITLE="ART FRAME"
AWS_DEFAULT_REGION="us-east-2"
AWS_ACCESS_KEY_ID="id"
AWS_SECRET_ACCESS_KEY="secret"
VIDEO_DECODER="hevc_videotoolbox"
ART_FRAME_S3_BUCKET="software-releases"

# Set to "1" to force software decoding
FORCE_SOFTWARE_DECODER="0"

# Debug Configuration
# Set to "1" to enable debug output
DEBUG_DECODERS="0"
DEBUG_FRAME_UPDATES="0"

# Memory Management (ARM64 specific)
GODEBUG="madvdontneed=1"
GOMAXPROCS="1"
GOGC="25"
GOMEMLIMIT="256MiB"

# CGO Configuration
CGO_ENABLED=1
CGO_CFLAGS="-O1 -g -fPIC"
CGO_LDFLAGS="-Wl,--no-as-needed -fPIC"